<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/present_detail_pic"
        android:layout_width="178dp"
        android:layout_height="165dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/present_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/present_detail_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/present_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/present_detail_pic"
        app:layout_constraintTop_toBottomOf="@+id/present_detail_name" />

    <TextView
        android:id="@+id/present_detail_numFilled"
        android:layout_width="65dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toEndOf="@+id/present_detail_pic"
        app:layout_constraintTop_toBottomOf="@+id/present_detail_price" />

    <TextView
        android:id="@+id/present_detail_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/present_detail_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>